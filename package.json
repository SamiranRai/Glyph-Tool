{
  "name": "glyph-tool",
  "displayName": "Glyph Tool",
  "publisher": "SamiranRay",
  "description": "Instantly highlight and track TODOs, FIXMEs, and Custom Keywords as you code.",
  "version": "1.0.14",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SamiranRai/Glyph-Tool"
  },
  "icon": "resources/glyph-icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:highlightWord.afterColon",
    "onCommand:scanAllfiles.containDefaultKeyword",
    "onView:customSidebar"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scanAllfiles.containDefaultKeyword",
        "title": "Scan Files:"
      },
      {
        "command": "highlightWord.afterColon",
        "title": "Highlight Word:"
      }
    ],
    "keybindings": [],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileScannerSidebar",
          "title": "Glyph Tool",
          "icon": "resources/glyph.svg"
        }
      ]
    },
    "views": {
      "fileScannerSidebar": [
        {
          "id": "customSidebar",
          "name": "",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "level": "^9.0.0",
    "tinycolor2": "^1.6.0"
  }
}
